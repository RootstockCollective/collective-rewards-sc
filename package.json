    },
    {
      "name": "Fernando Ruiz",
      "url": "https://github.com/fruiz08"
    }
  ],
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nomicfoundation/hardhat-foundry": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@tsconfig/node22": "^22.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint-plugin-mocha": "^10.4.3",
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "husky": "^9.0.11",
    "markdownlint-cli2": "^0.13.0",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2",
    "typechain": "^8.3.2",
    "typescript": "^5.5.3"
  },
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out cache_hardhat artifacts typechain-types",
    "compile": "forge compile --force && hardhat compile --force",
    "lint": "bun run lint:sol && bun run lint:md && bun run lint:ts",
    "lint:sol": "solhint {script,src,test}/**/*.sol",
    "lint:md": "markdownlint-cli2 .",
    "lint:ts": "eslint . --ext .ts",
    "lint:ts:fix": "eslint . --ext .ts --fix",
    "prettier:check": "prettier --check \"**/*.{json,md,yml,ts}\" --ignore-path \".prettierignore\" && forge fmt --check ",
    "prettier:write": "prettier --write \"**/*.{json,md,yml,ts}\" --ignore-path \".prettierignore\" && forge fmt",
    "test": "forge test",
    "test:integration": "hardhat test",
    "test:coverage": "forge coverage",
    "prepare": "husky && bun run compile",
    "docgen": "forge doc"
  }
}
